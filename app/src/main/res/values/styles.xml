    </style>

    <style name="textAppearance_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_e2bb74</item>
    </style>

    <style name="textAppearanceLarge">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textAppearance_bold_22sp" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <!-- 全局输入框样式 -->
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:minHeight">@dimen/edit_min_height</item>
        <item name="android:textColorHint">?attr/textColorHint</item>
        <item name="android:textSize">16sp</item>
