    <style name="windowTitleStyle" parent="@style/RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="checkboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check_box</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="checkboxStyle.Visibility">
        <item name="android:button">@drawable/selector_radio_button_visibility</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>


    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#575042</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="radioButtonStyle.Label">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_label</item>
        <item name="android:textColor">@color/color_secondary_primary_inverse</item>
        <item name="android:minWidth">52dp</item>
        <item name="android:maxHeight">23dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="ratingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <!--        <item name="android:progressDrawable">@drawable/layer_rating_bar</item>-->
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>


    <style name="switchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!--        <item name="android:thumb">@drawable/selector_switch_thumb</item>-->
        <item name="android:showText">false</item>
        <item name="android:background">@null</item>

        <!--        <item name="colorControlActivated">#F2EFEB</item>-->
        <!--        <item name="colorSwitchThumbNormal">@color/colorAccent</item>-->
