    </style>
    <style name="week">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">#4D5259</item>

    </style>
    <!-- 全局按键样式 -->
    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_but_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textColorPrimaryInverse</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:maxHeight">46dp</item>
        <!--        <item name="android:paddingLeft">8dp</item>-->
        <!--        <item name="android:paddingRight">8dp</item>-->
    </style>

    <style name="buttonStyle.Small">
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="buttonStyle.Border">
        <item name="android:background">@drawable/ic_but_border_bg</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="buttonStyle.Border.Small">
        <item name="android:minHeight">23dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">?attr/textColorHighlight</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="buttonBarNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonBarPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#DDA031</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonBarNeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!--        <item name="android:visibility">gone</item>-->
    </style>

