<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_activity_title" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/invate_bg"
            android:paddingBottom="109dp">


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="63dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/juan_zhou">

                </ImageView>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginTop="36dp"
                        android:src="@drawable/share_round_icon_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/app_name_1"
                        android:textColor="#ff20272f"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/share_text" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="55dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_update_top" />

                    <LinearLayout
                        android:layout_width="220dp"

                        android:layout_height="220dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/ic_c_bg"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_invitation_code" />

                        <TextView
                            android:id="@+id/tv_invite_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textColor="#789A27"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            tools:text="N 5 M 9 6" />

                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/iv_rq_code"
                                android:layout_width="82dp"
                                android:layout_height="82dp"
                                android:layout_centerInParent="true"
                                tools:background="#123" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#52a3ad87" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tips_rq_code_download"
                            android:textColor="#75797E"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_save"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:layout_below="@id/rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/dark_green_corner_2"
                android:gravity="center"
                android:text="@string/tv_share"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>