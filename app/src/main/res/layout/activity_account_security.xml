<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_activity_title" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:layout_margin="@dimen/dp_16"
    android:background="@drawable/shape_rect_white_8"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_account_security"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:paddingLeft="@dimen/heart_margin_large"
        android:paddingRight="@dimen/heart_margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_login_password"
            android:textColor="?attr/textColorPrimary" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_enter" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/color_e6e6e6" />
    <RelativeLayout
        android:id="@+id/layout_fund_security"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:paddingLeft="@dimen/heart_margin_large"
        android:paddingRight="@dimen/heart_margin_large">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/change_fund_password"
            android:textColor="?attr/textColorPrimary" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_enter" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>