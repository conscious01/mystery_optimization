<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#c0c0c0">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/heart_margin"
        android:paddingTop="6dp"
        android:paddingRight="@dimen/heart_margin"
        android:paddingBottom="6dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingStart="0dp"
            android:text="@string/ask_things"
            android:textColor="@color/color_secondary_highlight"
            tools:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:button="@null"
            android:paddingStart="0dp"
            android:text="@string/score"
            android:textColor="@color/color_secondary_highlight" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:button="@null"
            android:paddingStart="0dp"
            android:text="@string/number_answers"
            android:textColor="@color/color_secondary_highlight" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:button="@null"
            android:drawableEnd="@drawable/selector_filter"
            android:gravity="center"
            android:paddingStart="0dp"
            android:text="@string/price"
            android:textColor="@color/color_secondary_highlight" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/recycle_item_master" />

</LinearLayout>