<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/state_layout_background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="  " />

    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/draw_dialog_8_bg"

        android:orientation="vertical">

        <TextView
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#ff20272f"
            android:textSize="20sp"
            android:text="@string/today_fortune" />
             <include layout="@layout/include_share_today_fortune_layout"/>
<!--        <ImageView-->
<!--            android:id="@+id/img_bg"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="350dp"-->
<!--            android:layout_marginLeft="@dimen/dp_15"-->
<!--            android:layout_marginTop="9dp"-->
<!--            android:layout_marginRight="@dimen/dp_15"-->
<!--            android:layout_marginBottom="@dimen/dp_8"-->
<!--            tools:background="@drawable/icon_home_jrys_db" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@drawable/draw_share_dilalog_bottom_8_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/icon_logo_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_weight="1"
                android:text="@string/app_name_1"
                android:textColor="#ff20272f"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/tv_share_1"
                android:textColor="#ff787c81"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/icon_qrcode"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_16"
                tools:background="#524578" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="  " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_42">


        <LinearLayout
            android:id="@+id/share_wx_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_wx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/tv_share_2"
                android:textColor="#ff787c81"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_pyq_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share_pyq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/tv_share_3"
                android:textColor="#ff787c81"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_xc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon__save_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/tv_share_4"
                android:textColor="#ff787c81"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>