<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20">


    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_default_avatar" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"

            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="?attr/textColorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:gravity="top"
                    tools:text="安德森" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <!--                    android:drawableEnd="@drawable/ic_copy"
            -->
            <TextView
                android:id="@+id/tv_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:textSize="14sp"
                tools:text="UID: 180180" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/master_homepage_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/green_2dp"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="@string/my_homepage"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="94dp"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/tv_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@drawable/light_green_2dp"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:textColor="#ff789a27"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:text="师傅"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_companion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_golden_2dp"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:textColor="#ffe09c2b"
            android:textSize="14sp"
            android:visibility="invisible"
            tools:text="超级合伙人"
            tools:visibility="invisible" />

        <FrameLayout
            android:id="@+id/layout_label_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_label_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@drawable/ic_but_bg" />

            <TextView
                android:id="@+id/iv_super_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/dp_4"
                android:textColor="?textColorPrimaryInverse"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="超级合伙人"
                tools:visibility="visible" />
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_master_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            tools:src="@drawable/icon_silver_type_bg_1" />
    </LinearLayout>


</LinearLayout>