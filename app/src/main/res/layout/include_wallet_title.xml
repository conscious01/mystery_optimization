<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_title_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="?backgroundColor"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/heart_margin"
        android:src="@drawable/ic_back_black" />

    <com.zgzx.metaphysics.widgets.PagerSlidingTabStrip
        android:id="@+id/content_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@android:color/transparent"
        app:pstsIndicatorHeight="@dimen/dp_4"
        android:layout_marginLeft="@dimen/button_margin_top"
        android:layout_marginRight="@dimen/button_margin_top"
        app:pstsIndicatorColor="@android:color/transparent"
        app:pstsDividerColor="@color/backgroundColor"
        app:pstsShouldExpand="true" />
</LinearLayout>