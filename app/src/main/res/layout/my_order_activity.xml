<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F4"
    android:orientation="vertical">


    <include layout="@layout/include_activity_title" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tl_indicator_color="#A3AD87"
        app:tl_indicator_width="14dp"
        app:tl_tab_space_equal="true"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="#20272F"
        app:tl_textUnselectColor="#74797D" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="#A3AD87"
        android:layout_marginRight="16dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        style="@style/ViewPagerStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      />

</LinearLayout>