<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape_bless_title_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/heart_margin"
            android:src="@drawable/ic_back_white" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/tv_daily_bless"
            android:textColor="#E8D5BA"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bless_bg"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_16"

                        android:background="@drawable/icon_calendar_month_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_calendar_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_16"
                            android:text="2020年8月祈福日历"
                            android:textColor="#ff4d5259"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_margin="@dimen/dp_16"
                            android:background="@drawable/shape_b9a17b_dash_bg" />

                        <com.haibin.calendarview.CalendarView
                            android:id="@+id/mCalendarViewBless"
                            android:layout_width="match_parent"
                            android:layout_height="330dp"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="@drawable/icon_bagua"
                            app:current_day_text_color="#FFFFE9C1"
                            app:current_month_text_color="#8D472C"

                            app:month_view="com.zgzx.metaphysics.widgets.calendar.CalendarBlessMothView"
                            app:month_view_scrollable="false"
                            app:month_view_show_mode="mode_only_current"
                            app:scheme_text_color="#333"
                            app:scheme_text="假"
                            app:week_background="@android:color/transparent"
                            app:week_bar_view="com.zgzx.metaphysics.widgets.calendar.CalendarBlessWeekBar"
                            app:week_start_with="mon"
                            app:week_view_scrollable="false"
                            app:year_view_month_margin_top="@dimen/dp_20"

                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="#936338" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:text="@string/tv_bless_calendar_continuity"

                            android:textColor="#ff3a3a3a"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="58dp"
                                android:background="@drawable/shape_6d4624_2_bg"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_ten"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:background="@drawable/icon_one" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="58dp"

                                android:layout_marginLeft="@dimen/dp_8"
                                android:background="@drawable/shape_6d4624_2_bg"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_ge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:background="@drawable/icon_one" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:text="@string/tv_day"
                                android:textColor="#ff3a3a3a"
                                android:textSize="18sp" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:background="@drawable/icon_incense_burner" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_bless_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_12"
                            tools:text="您总共祈福232天"
                            android:textColor="#ff4d5259"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_bless_day_contiune"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginBottom="@dimen/dp_20"
                            tools:text="今天已有345790人与你一同参加活动"
                            android:textColor="#ff4d5259"
                            android:textSize="16sp" />


                    </LinearLayout>




            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/backgroundColor"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mSendContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="3dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/selector_edit_underline_gray"
                android:hint="@string/tv_hint_bless"
                android:maxLength="20"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvBtnSend"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#FF9CB26C"
                android:gravity="center"
                android:text="@string/tv_send_bless"
                android:textColor="@color/backgroundColor" />

        </LinearLayout>
    </FrameLayout>


</LinearLayout>