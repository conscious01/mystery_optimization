<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_260"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_gravity="center"
        android:background="@drawable/icon_advertisement_dialog_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_120"
        android:background="@drawable/icon_adver_kmz" />

    <ImageView
        android:id="@+id/img_layout_paly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_2"
        android:background="@drawable/icon_ad_play" />

    <LinearLayout
        android:id="@+id/Ad_layout_paly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_adver_play" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fffeceaf"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3.0"
            android:text="@string/tv_play_tips"
            android:textColor="#ffcc3738"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/not_play_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_80"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_not_play"
            android:textColor="#3c3a3a"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/dp_60"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/color_888787" />
    </LinearLayout>
</FrameLayout>